<div class="container">
  <div class="panel small-12 medium-5 medium-centered columns">
    <h2>Sign Up</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
      :html => {:multipart => true}) do |f| %>

    <div class="row">
      <div class="small-12 columns">
        <%= f.input :email, label: "E-mail", :autofocus => true %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 medium-6 columns">
        <%= f.input :password, required: true, label: "Password - 8 character min" %>
      </div>
    
      <div class="small-12 medium-6 columns">
        <%= f.input :password_confirmation, required: true, label: "Password Confirmation" %>
      </div>
    </div>
    
    <div class="row">
      <div class="small-12 medium-6 columns">
        <%= f.input :first_name, label: "First Name" %>
      </div>
      <div class="small-12 medium-6 columns">
       <%= f.input :last_name, label: "Last Name" %>
      </div>
    </div>
      
    <div class="row">
      <div class="small-12 columns">
        <div class="sign-up">
          <%= f.label "Profile Photo" %><br>
          <%= f.file_field :avatar, label: "Profile Photo" %>
          <%= f.input :twitter_handle, label: "Twitter Url" %>
          <%= f.input :linked_in_url, label: "Linked In Url" %>
          <%= f.input :about_me, label: "About You (500 character max)" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        <div class="full-length-button">
          <%= f.submit "Sign up", class: "button" %>
        </div>
      </div>
    </div>
  <% end %>
</div>