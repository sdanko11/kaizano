<div class="row">
  <div class="large-">
    <div class="row">
      <div class="large-6 columns"><br>
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
:html => {:multipart => true}) do |f| %>

  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></div>

  <div><%= f.label "Profile Photo" %>
  <br>
  
  <%= f.file_field :avatar %></div>

   <div><%= f.label :twitter_handle %><br />
  <%= f.text_field :twitter_handle %></div>

  <div><%= f.label :linked_in_url %><br />
  <%= f.text_field :linked_in_url %></div>

  <div><%= f.label :phone_number %><br />
  <%= f.text_field :phone_number %></div>

  <div><%= f.submit "Sign up", class: "button" %></div>
<% end %>

<%= render "devise/shared/links" %>

   </ul>
  </div>
</nav>