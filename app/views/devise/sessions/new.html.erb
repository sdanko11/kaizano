<div class="container">
  <div class="panel small-11 small-centered medium-4 large-3 columns">
    <h2>Sign in</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.input :email, label: "Email", :autofocus => true %>
      <%= f.input :password, required: true, label: "Password" %>
        <div class="full-length-button">
          <%= f.submit "Sign in", class: "button" %>
        </div>
    <% end %>
    <%= link_to "Sign up", new_user_registration_path %><br>
  </div>
</div>