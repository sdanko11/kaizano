<!DOCTYPE html>
<html>
  <head>

    <title><%= content_for?(:title) ? yield(:title) : "Kaizano" %></title>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body style="background-color:#F2F2F2">
  <nav class="top-bar" style="background-color:#01DFA5">
    <ul class="title-area">
      <li class="name">
        <div>
          <% if user_signed_in? %>
            <h1><%= link_to "Kaizano", user_path(current_user) %></h1>
          <% else %> 
            <h1><%= link_to "Kaizano", root_path %></h1>
          <% end %>
        </div>
      </li>
    </ul>
      <section class="top-bar-section">
        <ul class="right">
          <% if user_signed_in? %>
          <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          <%else %>
          <li><%= link_to "Sign Up",new_user_registration_path %></li>
          <li><%= link_to "Sign In",new_user_session_path %></li>
          <% end %>
        </ul>
    </nav>

        <%= yield %>

    <%= javascript_include_tag "application" %>
  </body>
</html>