<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= content_for?(:title) ? yield(:title) : "Kaizano" %>
    </title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
 
    <body class="page-body">
      <div class="fixed">
        <nav class="top-bar" data-topbar>
          <ul class="title-area">
            <li class="name">
              <h1 class="title-font"><%= link_to "Kaizano", root_path %></h1>
            </li>
            <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
          </ul>
          <section class="top-bar-section">
            <% if user_signed_in? %>
              <ul class="right">
                 <li><%= link_to "Join a Presentation", events_path %></li>
                  <li><%= link_to "Me", user_path(current_user) %></li>
                  <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>       
                <li class="has-dropdown">
                  <a href="#">More</a>
                  <ul class="dropdown">
                    <li><%= link_to "How it Works", how_it_works_path %></li>
                    <li><%= link_to "Learn More", learn_mores_path %></li>
                    <li><%= link_to "Contact Us",new_contact_form_path %></a></li>
                  </ul>
                </li>
              </ul>
            <% else %>
              <ul class="right">
                <li><%= link_to "Join a Presentation", events_path %></li>
                <li><%= link_to "How it Works",how_it_works_path %></li>
                <li><%= link_to "Sign Up",new_user_registration_path %></li>
                <li><%= link_to "Sign In",new_user_session_path %></li>      
                <li class="has-dropdown">
                <a href="#">More</a>
                  <ul class="dropdown">
                    <li><%= link_to "Learn More", learn_mores_path %></li>
                    <li><%= link_to "Contact Us",new_contact_form_path %></a></li>
                  </ul>
                </li>
              </ul>
            <% end %>
          </section>
        </nav>
      </div>
    <%= yield %>
    <link href='http://fonts.googleapis.com/css?family=Nunito' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag "application" %>
    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-47486611-1', 'kaizano.herokuapp.com');
    ga('send', 'pageview');
    </script>
  </body>
</html>