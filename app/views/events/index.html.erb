<div class="find-event-container">
  <div class="panel small-4 small-centered columns">
    <% if @event == nil %>
    <div class="password-title">
      <div class="row">
        <div class="center">
          <b><font size="6">Enter Event Password</font></b>
        </div>
      </div>
    </div>
        <%= form_for :search, action: events_path, method: "get" do |f| %><br>
    <div class="field-for-password">
      <div class="row">
        <div class="centered">
          <%= f.text_field :event_password %>
        </div>
      </div>
    </div>
    <div class="submit-button">
      <div class="row">
        <%= submit_tag "Find Event", class: "button" %><br>
      </div>
    </div>
    <div class="flash-message">
      <div class="row">
        <%= flash[:could_not_find_event_notice] %>      
      </div>
    </div>
        <% end %>
    <% end %>
  </div>
</div>
