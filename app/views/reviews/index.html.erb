<div class="row">
   <div class="small-7 columns">
     <h1><%= @event.name %><h1>
  </div>
</div>
<div class="row">
  <div class="small-4 columns">
    <%= @event.description%>
  </div>
</div>
<div class="row">
  <ul class="small-block-grid-">
    <li>
      <table width="220", height="100", display="inline-block">
        <thead align="center">
        <th>Ratings Recieved</th>
        </thead>
        <tr>
        <% if @event.count_reviews > 0 %>
          <td align="center"><%= @event.count_reviews %></td>
        <% else %>
          <td>No Ratings Recieved</td>
        </tr>
        <% end %>
      </table>
    </li>
    <li>
      <table width="220", height="100", display="inline-block">
        <thead align="center">
          <th>Average Rating</th>
        </thead>
          <tr>
          <% if @event.count_reviews > 0 %>
            <td align="center"><%= @event.calculate_average_rating %></td>
          <% else %>
            <td>No Reviews Left</td>
          <% end %>
          </tr>
      </table>
    </li>
  </ul>
</div>
<div class="row">
  <div class="small-11 small-centered columns">
    <table class="center", width="800", height="50", display="inline-block">
      <thead>
        <th>Audience Feedback Comments</th>
      </thead>
        <tbody>
          <% if @event.reviews.count > 0 %>
            <% @event.reviews.each do |review| %>
              <% if review.feedback_comments != '' %>
              <tr>
                <td><%= review.feedback_comments %></td>
              </tr>
              <% end %>
            <% end %>
          <% else %>
            <tr>
              <td>Audience Members left no feedback</td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="small-11 small-centered columns">
    <table class="center", width="800", height="50", display="inline-block">
      <thead>
        <th>
          <span>Audience Questions</span>
          <span><%=link_to "View Questions" %></span>
        </th>
        <th>
        </th>
      </thead>
        <tbody>
        <% if @event.questions.count > 0 %>
          <% @event.questions.each do |question| %>
          <tr>
            <td><%= question.body %></td>
            <td align="center">
            <br>
              <%= link_to "Comment", event_path(@event), class: "button tiny" %>
            </td>
          </tr>
          <% end %>
        <% else %>
          <tr>
            <td>No Questions</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>