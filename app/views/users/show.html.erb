<%= render 'user_dahsh_board_flashes' %>
<div class="row">
  <div class="small-11 medium-3 large-4 columns">
    <div class="photo">
      <%= image_tag @user.avatar.thumb.url, class: "profile-pic" %>
    </div>
    <h1><%= @user.format_speaker_name %></h1>
  </div>
  <%= render "user_stats" %>
</div>
<% if @user.calulate_profile_completion_percent != "100%" %>
  <div class="row">
    <div class="small-12 medium-6 large-6 columns">
      <div class="percentage-complete-statement">
        <%= "Your Profile is #{@user.calulate_profile_completion_percent} complete." %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 medium-4 large-4 columns">
      <div class="progress [secondary alert success] [radius round]">
        <span class="meter" style="width: <%= "#{@user.calulate_profile_completion_percent}" %>"</span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="edit-pofile">
        <%= link_to "Complete Profile", edit_user_path(@user) %>
      </div>
    </div>
  </div>
<% else %>
<div class="row">
    <div class="small-12 columns">
      <div class="edit-pofile">
        <%= link_to "Edit Profile", edit_user_path(@user) %>
      </div>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="large-4 medium-4 small-12 columns">
    <div class="full-length-button">
      <%= link_to "Add Speaking Event", new_event_path, class: "button" %>
    </div>
  </div>
</div>
<div class="row">
  <%= render 'events' %>
</div>