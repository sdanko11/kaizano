<div class="container">
  <div class="panel small-11 small-centered medium-7 large-5 columns">
    <h2 class="sign-up-title">Edit Profile</h2>
      <%= simple_form_for(@user) do |f| %>
        <%= f.input :first_name %><br/>
        <%= f.input :last_name%><br/>
        <%= f.input :about_me, label: "About you (500 character max)", as: :text%><br/>
        <%= f.label "Profile Photo"%><br>
        <%= f.file_field :avatar%><br>
        <label>
          <%= f.check_box :remove_avatar %>
          Remove Avatar?
        </label>
        <%= f.input :twitter_handle, label: 'Twitter Url'%><br/>
        <%= f.input :linked_in_url, label: 'LinkedIn Url'%><br/>
        <div class="row">
          <div class="row">
            <div class="large-6 medium-6 columns">
              <div class="full-length-button">
                <%= f.submit 'Save Changes',class: "button" %>
              </div>
            </div>
            <div class="large-6 medium-6 columns">
              <div class="full-length-button">
                <%= link_to "Cancel", user_path, class: "button" %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="large-6 columns">
            <h6><%= link_to "Delete Account", @user, method: :delete, data: { confirm: 'Are you sure you want to delete your account?' } %></h6>
          </div>
        <div>
      </div> 
    </div>
  </div>
</div>